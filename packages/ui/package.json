{
  "name": "@emeraldwallet/ui",
  "version": "1.3.2",
  "description": "UI components for Emerald wallet",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "ETCDEV GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "build:dist": "rimraf lib/ && tsc",
    "build": "rimraf lib/ && tsc",
    "test": "jest --no-cache --env=jsdom",
    "test:coverage": "jest --env=jsdom --coverage && codecov",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
  "dependencies": {
    "@emeraldplatform/core": "^0.5.0-gamma.0",
    "@emeraldplatform/ui": "^0.5.0-gamma.0",
    "@emeraldplatform/ui-icons": "^0.5.0-gamma.0",
    "@emeraldwallet/core": "^1.3.0",
    "@emeraldwallet/erc20": "^1.3.0",
    "@material-ui/core": "^4.0.0-alpha.6",
    "@material-ui/lab": "^4.0.0-alpha.6",
    "@material-ui/styles": "^4.0.0-alpha.6",
    "bignumber.js": "8.0.2",
    "qrcode.react": "^0.9.3",
    "react": "^16.8.6"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@storybook/react": "^5.0.9",
    "@types/enzyme": "^3.9.0",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.10.4",
    "@types/qrcode.react": "^0.8.2",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "babel-preset-react-app": "^7.0.2",
    "emotion-theming": "^10.0.10",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "jest": "^24.7.1",
    "jest-canvas-mock": "^2.0.0-beta.1",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "typescript": "3.4.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ]
  }
}
