{
  "name": "emerald-wallet",
  "private": true,
  "scripts": {
    "clean:node_modules": "rimraf node_modules packages/*/node_modules",
    "build": "lerna run build --stream",
    "test": "lerna run test --stream",
    "lint": "lerna run lint --stream",
    "lint:ts": "tslint 'packages/**/*.ts{,x}' -c tslint.json",
    "build:dist": "lerna run build:dist --stream",
    "test:coverage": "lerna run test:coverage --stream",
    "build:neon": "electron-build-env neon build @emeraldpay/emerald-vault-node --release"
  },
  "devDependencies": {
    "lerna": "3.16.4",
    "tslint": "^5.20.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-react": "^4.1.0",
    "electron-build-env": "0.2.0",
    "neon-cli": "0.3.1"
  },
  "workspaces": [
    "packages/*"
  ]
}
